<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        <%= title %>
    </title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/Index.css">

    <style>
        .table-hover tbody tr:hover {
            background: rgba(13, 110, 253, .05)
        }

        .card-header {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: #fff
        }

        .persona-row {
            transition: .2s
        }

        .persona-row:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, .1)
        }

        .navbar-custom {
            background: #0d6efd
        }

        .footer-custom {
            background: #343a40;
            color: white;
            padding: 1rem;
            margin-top: 2rem
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/"><i class="bi bi-car-front-fill"></i> Gestión Vehicular</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">Inicio</a>
                <a class="nav-link active" href="/personas">Personas</a>
                <a class="nav-link" href="/vehiculos">Vehículos</a>
                <a class="nav-link" href="/login">Login</a>
            </div>
        </div>
    </nav>

    <main class="container-fluid mt-4">

        <div class="card shadow mb-3">
            <div class="card-header d-flex justify-content-between">
                <div>
                    <h3><i class="bi bi-people"></i> Listado de Personas</h3>
                    <small>Gestión completa</small>
                </div>
                <a href="/personas/agregar" class="btn btn-light"><i class="bi bi-person-plus"></i> Agregar</a>
            </div>

            <div class="card-body">

                <!-- FILTROS -->
                <div class="row mb-3">

                    <div class="col-md-3">
                        <input class="form-control" id="filtroNombre" placeholder="Nombre / Apellido">
                    </div>

                    <div class="col-md-3">
                        <input class="form-control" id="filtroRun" placeholder="RUN">
                    </div>

                    <div class="col-md-3">
                        <input class="form-control" id="filtroEmail" placeholder="Email">
                    </div>

                    <div class="col-md-3">
                        <select class="form-select" id="filtroEstado">
                            <option value="">Todos</option>
                            <option value="activo">Activo</option>
                            <option value="inactivo">Inactivo</option>
                        </select>
                    </div>

                </div>

                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>RUN</th>
                            <th>Teléfono</th>
                            <th>Email</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    <tbody>

                        <% personas.forEach(persona=> { %>

                            <tr class="persona-row">

                                <td>
                                    <%= persona.id_persona || persona.id %>
                                </td>
                                <td>
                                    <%= persona.nombres || persona.nombre %>
                                </td>
                                <td>
                                    <%= persona.apellido_paterno || persona.apellido %>
                                </td>
                                <td>
                                    <%= persona.cedula || persona.run %>
                                </td>
                                <td>
                                    <%= persona.telefono %>
                                </td>
                                <td>
                                    <%= persona.email %>
                                </td>

                                <td>
                                    <% if(persona.activo || persona.estado==='activo' ){ %>
                                        <span class="badge bg-success">Activo</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Inactivo</span>
                                            <% } %>
                                </td>

                                <td>
                                    <a href="/personas/editar/<%= persona.id_persona || persona.id %>"
                                        class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil"></i></a>
                                    <a href="/personas/eliminar/<%= persona.id_persona || persona.id %>"
                                        class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                                </td>

                            </tr>

                            <% }) %>

                    </tbody>
                </table>

                <div class="text-muted mt-2">
                    Mostrando <span id="contador">
                        <%= personas.length %>
                    </span> personas
                </div>

            </div>
        </div>

    </main>

    <footer class="footer-custom text-center">
        &copy; <%= new Date().getFullYear() %> Sistema Gestión Vehicular
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>

        function filtrar() {

            let nombre = $("#filtroNombre").val().toLowerCase();
            let run = $("#filtroRun").val().toLowerCase();
            let email = $("#filtroEmail").val().toLowerCase();
            let estado = $("#filtroEstado").val().toLowerCase();

            let total = 0;

            $(".persona-row").each(function () {

                let fila = $(this);

                let n = fila.find("td:eq(1)").text().toLowerCase();
                let a = fila.find("td:eq(2)").text().toLowerCase();
                let r = fila.find("td:eq(3)").text().toLowerCase();
                let e = fila.find("td:eq(5)").text().toLowerCase();
                let est = fila.find("td:eq(6)").text().toLowerCase();

                let ok = (n.includes(nombre) || a.includes(nombre)) &&
                    r.includes(run) &&
                    e.includes(email) &&
                    (estado == "" || est.includes(estado));

                fila.toggle(ok);

                if (ok) total++;

            });

            $("#contador").text(total);

        }

        $("#filtroNombre,#filtroRun,#filtroEmail").on("keyup", filtrar);
        $("#filtroEstado").on("change", filtrar);

    </script>s
</body>

</html>