    <script>
        $(document).ready(function () {
            // Inicializar DataTable
            if ($('#tablaDocumentos').length) {
                $('#tablaDocumentos').DataTable({
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                    },
                    pageLength: 10,
                    responsive: true,
                    order: [[3, 'asc']]
                });
            }

            // Manejar cambio entre selección por lista o búsqueda por patente
            $('input[name="seleccion_vehiculo"]').change(function () {
                const seleccion = $(this).val();

                if (seleccion === 'select') {
                    $('#opcionSelect').show();
                    $('#opcionManual').hide();
                    // Limpiar búsqueda manual
                    limpiarBusqueda();
                    // Actualizar campo oculto
                    $('#id_vehiculo_final').val($('#id_vehiculo_select').val());
                } else {
                    $('#opcionSelect').hide();
                    $('#opcionManual').show();
                    // Limpiar campo oculto
                    $('#id_vehiculo_final').val('');
                }
            });

            // Cuando se selecciona un vehículo de la lista
            $('#id_vehiculo_select').change(function () {
                const selectedId = $(this).val();
                $('#id_vehiculo_final').val(selectedId);
            });

            // Cuando se escribe una patente manualmente
            $('#patente_busqueda').on('input', function () {
                // Convertir a mayúsculas mientras se escribe
                $(this).val($(this).val().toUpperCase());
                // Limpiar información anterior
                $('#vehiculoInfo').hide();
                $('#vehiculoNoEncontrado').hide();
                $('#id_vehiculo_final').val('');
            });

            // Auto-búsqueda después de 1 segundo de inactividad (opcional)
            let searchTimeout;
            $('#patente_busqueda').on('keyup', function () {
                clearTimeout(searchTimeout);
                const patente = $(this).val().trim();
                if (patente.length >= 3) {
                    searchTimeout = setTimeout(() => {
                        buscarVehiculoPorPatente();
                    }, 1000);
                }
            });

            // Validación del formulario
            $('#formNuevoDocumento').on('submit', function (e) {
                e.preventDefault();

                const seleccion = $('input[name="seleccion_vehiculo"]:checked').val();
                let vehiculoId = '';

                if (seleccion === 'select') {
                    vehiculoId = $('#id_vehiculo_select').val();
                } else {
                    vehiculoId = $('#id_vehiculo_final').val();
                }

                // Validar que se haya seleccionado/encontrado un vehículo
                if (!vehiculoId) {
                    if (seleccion === 'select') {
                        alert('Por favor selecciona un vehículo de la lista');
                        $('#id_vehiculo_select').focus();
                    } else {
                        alert('Por favor busca y selecciona un vehículo por patente');
                        $('#patente_busqueda').focus();
                    }
                    return false;
                }

                // Validar otros campos obligatorios
                const tipoDoc = $('#id_tipo_documento_veh').val();
                const numeroDoc = $('#numero_documento').val().trim();
                const fechaVenc = $('#fecha_vencimiento').val();

                if (!tipoDoc || !numeroDoc || !fechaVenc) {
                    alert('Por favor completa todos los campos obligatorios (*)');
                    return false;
                }

                // Validar fechas
                const fechaEmision = $('#fecha_emision').val();
                if (fechaEmision && fechaVenc) {
                    const fechaEmisionDate = new Date(fechaEmision);
                    const fechaVencimientoDate = new Date(fechaVenc);

                    if (fechaVencimientoDate < fechaEmisionDate) {
                        alert('La fecha de vencimiento no puede ser anterior a la fecha de emisión');
                        return false;
                    }
                }

                // Si todo está bien, enviar el formulario
                this.submit();
            });

            // Preview de archivo
            function previewFile(input) {
                const preview = document.getElementById('filePreview');
                if (input.files && input.files[0]) {
                    const file = input.files[0];
                    const reader = new FileReader();

                    reader.onload = function (e) {
                        if (file.type.startsWith('image/')) {
                            preview.innerHTML = '<img src="' + e.target.result + '" class="file-preview" alt="Preview">';
                        } else if (file.type === 'application/pdf') {
                            preview.innerHTML = '<div class="alert alert-info p-2">' +
                                '<i class="bi bi-file-earmark-pdf text-danger me-2"></i>' +
                                'Archivo PDF listo para subir' +
                                '</div>';
                        } else {
                            preview.innerHTML = '<div class="alert alert-secondary p-2">' +
                                'Archivo: ' + file.name +
                                '</div>';
                        }
                    };

                    reader.readAsDataURL(file);
                } else {
                    preview.innerHTML = '';
                }
            }

            // Panel de depuración
            $('#debugToggle').click(function () {
                $('#debugPanel').toggle();
                updateDebugInfo();
            });

            function updateDebugInfo() {
                const vehiculosCount = $('#id_vehiculo_select option').length - 2;
                $('#debugVehiculosCount').text(vehiculosCount > 0 ? vehiculosCount : 0);

                const tiposCount = $('#id_tipo_documento_veh option').length - 1;
                $('#debugTiposCount').text(tiposCount > 0 ? tiposCount : 0);

                $('#debugDocumentosCount').text('<%= totalDocumentos || 0 %>');

                // Obtener último vehículo
                const lastVehiculo = $('#id_vehiculo_select option:last');
                if (lastVehiculo.length && lastVehiculo.val()) {
                    $('#debugLastVehiculo').text('ID: ' + lastVehiculo.val() + ' - ' + lastVehiculo.text().substring(0, 30) + '...');
                }
            }

            // Inicializar
            updateDebugInfo();
            window.previewFile = previewFile;
        });

        // FUNCIÓN PARA BUSCAR VEHÍCULO POR PATENTE
        function buscarVehiculoPorPatente() {
            const patente = $('#patente_busqueda').val().trim().toUpperCase();

            if (!patente) {
                alert('Por favor ingresa una patente de vehículo');
                return;
            }

            // Validar formato básico de patente (puedes ajustar según tu país)
            if (patente.length < 3) {
                alert('La patente debe tener al menos 3 caracteres');
                return;
            }

            // Mostrar loading
            const btnBuscar = $('#btnBuscarVehiculo');
            btnBuscar.html('<span class="spinner-border spinner-border-sm"></span> Buscando...');
            btnBuscar.prop('disabled', true);

            // Hacer petición AJAX para buscar el vehículo por patente
            $.ajax({
                url: '/documentos/api/vehiculo/patente/' + encodeURIComponent(patente),
                method: 'GET',
                dataType: 'json',
                success: function (response) {
                    btnBuscar.html('<i class="bi bi-search"></i> Buscar');
                    btnBuscar.prop('disabled', false);

                    if (response.success && response.vehiculo) {
                        const v = response.vehiculo;

                        // Mostrar información del vehículo
                        $('#infoId').text(v.id_vehiculo);
                        $('#infoPatente').text(v.patente || 'No disponible');
                        $('#infoMarcaModelo').text((v.marca || '') + ' ' + (v.modelo || ''));
                        $('#infoCliente').text(v.nombre_cliente || 'Sin cliente asignado');
                        $('#infoAnio').text(v.anio || 'No disponible');
                        $('#infoEstado').html(v.activo ? '<span class="badge bg-success">Activo</span>' : '<span class="badge bg-danger">Inactivo</span>');

                        $('#vehiculoInfo').show();
                        $('#vehiculoNoEncontrado').hide();

                        // Actualizar el campo oculto con el ID encontrado
                        $('#id_vehiculo_final').val(v.id_vehiculo);

                        // Mostrar mensaje de éxito
                        console.log('Vehículo encontrado por patente:', v);
                    } else {
                        // Mostrar mensaje de no encontrado
                        $('#vehiculoInfo').hide();
                        $('#vehiculoNoEncontrado').show();

                        // Limpiar campo oculto
                        $('#id_vehiculo_final').val('');

                        console.log('Vehículo no encontrado por patente:', patente);
                    }
                },
                error: function (xhr, status, error) {
                    btnBuscar.html('<i class="bi bi-search"></i> Buscar');
                    btnBuscar.prop('disabled', false);

                    // Mostrar mensaje de error
                    $('#vehiculoInfo').hide();
                    $('#vehiculoNoEncontrado').show();
                    $('#id_vehiculo_final').val('');

                    console.error('Error al buscar vehículo por patente:', error);
                    alert('Error al buscar vehículo. Por favor, inténtalo de nuevo.');
                }
            });
        }

