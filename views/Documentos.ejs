    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0/dist/js/select2.min.js"></script>

    <script>
        $(function () {

            const select = $('#id_vehiculo');
            const status = $('#vehiculoStatus');

            select.select2({
                dropdownParent: $('#modalNuevoDocumento'),
                width: '100%',
                placeholder: 'Buscar vehículo'
            });

            function cargarVehiculos() {

                status.html('<span class="spinner-border spinner-border-sm"></span> cargando vehículos...');

                $.get('/documentos/api/vehiculos', resp => {

                    select.empty().append('<option></option>');

                    if (!resp.success || !resp.vehiculos.length) {
                        status.text('❌ No hay vehículos');
                        return;
                    }

                    resp.vehiculos.forEach(v => {
                        select.append(new Option(
                            `${v.patente} | ${v.marca} ${v.modelo}`,
                            v.id_vehiculo
                        ));
                    });

                    status.text(`✔ ${resp.vehiculos.length} vehículos cargados`);

                    const last = localStorage.getItem('vehiculoSeleccionado');

                    select.val(last || resp.vehiculos[0].id_vehiculo).trigger('change');

                });

            }

            $('#modalNuevoDocumento').on('shown.bs.modal', cargarVehiculos);

            select.on('change', () => {
                localStorage.setItem('vehiculoSeleccionado', select.val());
            });

            $('#formNuevoDocumento').on('submit', e => {
                if (!select.val()) {
                    e.preventDefault();
                    alert('Seleccione vehículo');
                }
            });

        });
    </script>



