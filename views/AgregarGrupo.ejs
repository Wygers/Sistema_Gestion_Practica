    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            // Configurar año actual
            $('#currentYear').text(new Date().getFullYear());

            // Actualizar fecha del servidor
            actualizarFechaServidor();

            // Cargar datos iniciales
            cargarDatosGrupos();

            // Configurar DataTable después de cargar datos
            setTimeout(() => {
                if ($('#tablaGrupos').length) {
                    $('#tablaGrupos').DataTable({
                        language: {
                            url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                        },
                        pageLength: 10,
                        responsive: true,
                        order: [[1, 'asc']],
                        columnDefs: [
                            { orderable: false, targets: [0, 7] }
                        ]
                    });
                }
            }, 1000);
        });

        function actualizarFechaServidor() {
            const now = new Date();
            const options = {
                day: '2-digit',
                month: '2-digit',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            };
            $('#fechaServidor').text(now.toLocaleString('es-ES', options));
        }

        function cargarDatosGrupos() {
            // Hacer petición AJAX para obtener datos de la base de datos
            fetch('/api/grupos')
                .then(response => response.json())
                .then(datos => {
                    renderizarGrupos(datos);
                })
                .catch(error => {
                    console.error('Error al cargar grupos:', error);
                    mostrarMensajeError('Error al cargar los grupos');
                });
        }

        function renderizarGrupos(grupos) {
            if (!grupos || grupos.length === 0) {
                // Mantener el mensaje "No hay grupos creados"
                return;
            }

            let html = `
                <div class="table-responsive">
                    <table id="tablaGrupos" class="table table-hover table-group">
                        <thead>
                            <tr>
                                <th class="group-icon-cell"></th>
                                <th>Nombre del Grupo</th>
                                <th>Compañía</th>
                                <th>Contacto</th>
                                <th>Email</th>
                                <th>Ubicación</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
            `;

            // Colores para los avatares
            const avatarColors = ['#6f42c1', '#0d6efd', '#198754', '#ffc107', '#dc3545'];

            grupos.forEach(grupo => {
                // Obtener iniciales del contacto
                let inicialesContacto = 'NA';
                if (grupo.nombre_contacto) {
                    const nombres = grupo.nombre_contacto.split(' ');
                    inicialesContacto = (nombres[0]?.charAt(0) || '') + (nombres[1]?.charAt(0) || '');
                }

                html += `
                    <tr>
                        <td class="group-icon-cell">
                            <i class="bi bi-collection group-icon"></i>
                        </td>
                        <td>
                            <div class="fw-bold">
                                ${grupo.nombre_grupo}
                            </div>
                            <small class="text-muted">
                                ID: ${grupo.id_grupo}
                            </small>
                        </td>
                        <td>
                            ${grupo.nombre_compania || 'Sin compañía'}
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle bg-info text-white d-flex align-items-center justify-content-center me-2" 
                                     style="width: 28px; height: 28px; font-size: 0.7rem;">
                                    ${inicialesContacto}
                                </div>
                                <span>${grupo.nombre_contacto || 'No asignado'}</span>
                            </div>
                        </td>
                        <td>
                            ${grupo.email_contacto ?
                        `<a href="mailto:${grupo.email_contacto}" class="text-decoration-none">
                                    <i class="bi bi-envelope me-1"></i>${grupo.email_contacto}
                                </a>` :
                        'No tiene email'}
                        </td>
                        <td>
                            <small>
                                ${grupo.direccion ? grupo.direccion + ', ' : ''}
                                ${grupo.ciudad || ''}
                            </small>
                        </td>
                        <td>
                            <span class="badge ${grupo.activo ? 'badge-active' : 'badge-inactive'}">
                                <span class="status-indicator status-${grupo.activo ? 'active' : 'inactive'}"></span>
                                ${grupo.activo ? 'Activo' : 'Inactivo'}
                            </span>
                        </td>
                        <td class="action-buttons">
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-outline-primary" 
                                        onclick="verDetalleGrupo(${grupo.id_grupo})"
                                        title="Ver detalle">
                                    <i class="bi bi-eye"></i>
                                </button>
                                <button class="btn btn-outline-warning" 
                                        onclick="editarGrupo(${grupo.id_grupo})"
                                        title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-outline-info" 
                                        onclick="gestionarMiembros(${grupo.id_grupo})"
                                        title="Gestionar miembros">
                                    <i class="bi bi-person-plus"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
            });

            html += `
                        </tbody>
                    </table>
                </div>
            `;

            $('#gruposContainer').html(html);
        }

        function mostrarMensajeError(mensaje) {
            const flashMessages = $('#flashMessages');
            flashMessages.html(`
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    ${mensaje}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `);
        }

        // FUNCIONES GLOBALES
        function verDetalleGrupo(id) {
            window.location.href = '/grupos/detalle/' + id;
        }

        function editarGrupo(id) {
            window.location.href = '/grupos/editar/' + id;
        }

        function gestionarMiembros(id) {
            window.location.href = '/grupos/miembros/' + id;
        }

        function exportarGrupos() {
            // Obtener datos de la tabla actual
            const table = $('#tablaGrupos').DataTable();
            const data = table.rows().data();

            // Convertir a CSV
            let csvContent = "data:text/csv;charset=utf-8,";

            // Encabezados
            const headers = ["ID", "Nombre", "Compañía", "Contacto", "Email", "Dirección", "Ciudad", "Estado"];
            csvContent += headers.join(",") + "\n";

            // Datos
            data.each(function (value) {
                const row = [
                    value[1]?.split('ID: ')[1] || '', // Extraer ID
                    value[1]?.split('\n')[0] || '', // Nombre sin ID
                    value[2] || '',
                    value[3]?.split('>')[2]?.split('<')[0] || '', // Extraer nombre contacto
                    value[4]?.split('>')[2]?.split('<')[0] || '', // Extraer email
                    value[5]?.split(',')[0]?.trim() || '',
                    value[5]?.split(',')[1]?.trim() || '',
                    value[6]?.includes('Activo') ? 'Activo' : 'Inactivo'
                ];
                csvContent += row.join(",") + "\n";
            });

            // Descargar archivo
            const encodedUri = encodeURI(csvContent);
            const link = document.createElement("a");
            link.setAttribute("href", encodedUri);
            link.setAttribute("download", "grupos_" + new Date().toISOString().split('T')[0] + ".csv");
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }

        function generarReporteGrupos() {
            const tipo = $('#tipoReporteGrupos').val();
            const formato = $('input[name="formatoReporteGrupos"]:checked').val();

            // Redirigir al endpoint de reportes con los parámetros
            window.location.href = `/api/reportes/grupos?tipo=${tipo}&formato=${formato}`;

            // Cerrar modal
            $('#modalReporteGrupos').modal('hide');
        }
    </script>
