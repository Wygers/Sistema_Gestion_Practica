    <!-- Main Content -->
    <main class="container mt-4">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="text-primary-custom mb-2">
                    <i class="bi bi-people-fill me-2"></i>Gestión de Grupos
