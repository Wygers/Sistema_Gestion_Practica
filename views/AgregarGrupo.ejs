    <!-- Modal Reporte Grupos -->
    <div class="modal fade" id="modalReporteGrupos" tabindex="-1" aria-labelledby="modalReporteGruposLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="modalReporteGruposLabel">
                        <i class="bi bi-file-earmark-pdf me-2"></i>Generar Reporte de Grupos
