<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        <%= title || 'Agregar Nuevo Grupo' %>
    </title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />

    <style>
        :root {
            --primary-custom: #0d6efd;
            --purple-custom: #6f42c1;
            --success-custom: #198754;
            --warning-custom: #ffc107;
            --danger-custom: #dc3545;
        }

        .bg-purple-custom {
            background-color: var(--purple-custom) !important;
        }

        .text-purple-custom {
            color: var(--purple-custom) !important;
        }

        .btn-purple-custom {
            background-color: var(--purple-custom);
            border-color: var(--purple-custom);
            color: white;
        }

        .btn-purple-custom:hover {
            background-color: #5a32a3;
            border-color: #522d95;
            color: white;
        }

        .card-header-custom {
            background: linear-gradient(135deg, var(--purple-custom) 0%, #5a32a3 100%);
            color: white;
            border-bottom: none;
        }

        .form-section-title {
            border-left: 4px solid var(--purple-custom);
            padding-left: 10px;
            margin-bottom: 20px;
            font-weight: bold;
            color: #444;
        }

        .person-selector-box {
            background-color: #f8f0ff;
            border: 1px dashed var(--purple-custom);
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .persona-info-box {
            background-color: #e8f5e9;
            border: 1px solid #c8e6c9;
            border-radius: 8px;
            padding: 15px;
            margin-top: 10px;
        }

        .loading-spinner {
            display: inline-block;
            width: 1rem;
            height: 1rem;
            border: 2px solid #f3f3f3;
            border-top: 2px solid var(--purple-custom);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-purple-custom shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-people-fill me-2"></i>Gestión Vehicular
            </a>
            <div class="collapse navbar-collapse" id="navbarVehicular">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/grupos">Grupos</a></li>
                    <li class="nav-item"><a class="nav-link" href="/vehiculos">Vehículos</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <main class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="text-purple-custom mb-2"><i class="bi bi-plus-circle-fill me-2"></i>Registrar Nuevo Grupo
                </h1>
                <p class="text-muted">Asocia personas y clientes a una nueva unidad de gestión</p>
            </div>
            <a href="/grupos" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i>Volver</a>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm mb-5">
                    <div class="card-header card-header-custom py-3">
                        <h5 class="mb-0"><i class="bi bi-card-checklist me-2"></i>Formulario de Registro</h5>
                    </div>
                    <div class="card-body p-4">
                        <form id="formNuevoGrupo" action="/grupos/crear" method="POST">

                            <div class="form-section-title">Información Principal</div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="id_cliente" class="form-label fw-bold">Cliente Responsable <span
                                            class="text-danger">*</span></label>
                                    <select class="form-select select2-enable" id="id_cliente" name="id_cliente"
                                        required>
                                        <option value="">Seleccione un cliente...</option>
                                        <% if (typeof clientes !=='undefined' ) { %>
                                            <% clientes.forEach(cliente=> { %>
                                                <option value="<%= cliente.id_cliente %>">
                                                    <%= cliente.nombre %>
                                                </option>
                                                <% }); %>
                                                    <% } %>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="nombre_grupo" class="form-label fw-bold">Nombre del Grupo <span
                                            class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="nombre_grupo" name="nombre_grupo"
                                        placeholder="Ej: Operaciones Centro" required>
                                </div>
                            </div>

                            <!-- SECCIÓN MODIFICADA PARA BÚSQUEDA DE PERSONA -->
                            <div class="form-section-title">Vincular Persona Existente</div>
                            <div class="person-selector-box">
                                <div class="row">
                                    <div class="col-md-8 mb-3">
                                        <label for="buscar_persona" class="form-label fw-bold text-purple-custom">
                                            <i class="bi bi-search me-1"></i>Buscar Persona por RUN o ID
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                                            <input type="text" class="form-control" id="buscar_persona"
                                                placeholder="Ej: 12345678-9 o ID de persona">
                                            <button type="button" class="btn btn-purple-custom"
                                                onclick="buscarPersona()" id="btnBuscarPersona">
                                                <i class="bi bi-search"></i> Buscar
                                            </button>
                                        </div>
                                        <div class="form-text">Ingresa el RUN (con guión) o el ID de la persona</div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label fw-bold text-purple-custom">O selecciona de la
                                            lista</label>
                                        <select class="form-select" id="persona_vincular_select">
                                            <option value="">-- Seleccionar persona --</option>
                                            <% if (typeof personas !=='undefined' ) { %>
                                                <% personas.forEach(persona=> { %>
                                                    <option value="<%= persona.id_persona %>"
                                                        data-nombre="<%= persona.nombres %> <%= persona.apellido_paterno %> <%= persona.apellido_materno %>"
                                                        data-email="<%= persona.email %>">
                                                        <%= persona.run %>-<%= persona.dv %> | <%= persona.nombres %>
                                                                    <%= persona.apellido_paterno %>
                                                    </option>
                                                    <% }); %>
                                                        <% } %>
                                        </select>
                                    </div>
                                </div>

                                <!-- Información de la persona encontrada -->
                                <div id="personaInfo" class="persona-info-box mt-3" style="display: none;">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="mb-0"><i class="bi bi-person-check text-success me-2"></i>Persona
                                            encontrada</h6>
                                        <button type="button" class="btn btn-sm btn-outline-danger"
                                            onclick="limpiarPersona()">
                                            <i class="bi bi-x"></i> Quitar
                                        </button>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <strong>ID Persona:</strong> <span id="infoIdPersona">-</span><br>
                                            <strong>RUN:</strong> <span id="infoRun">-</span><br>
                                            <strong>Nombre:</strong> <span id="infoNombre">-</span>
                                        </div>
                                        <div class="col-md-6">
                                            <strong>Email:</strong> <span id="infoEmail">-</span><br>
                                            <strong>Teléfono:</strong> <span id="infoTelefono">-</span><br>
                                            <strong>Dirección:</strong> <span id="infoDireccion">-</span>
                                        </div>
                                    </div>
                                    <!-- Campo oculto para enviar el ID de la persona -->
                                    <input type="hidden" id="id_persona_vincular" name="id_persona_vincular" value="">
                                </div>

                                <!-- Mensaje si no se encuentra la persona -->
                                <div id="personaNoEncontrada" class="alert alert-warning mt-3" style="display: none;">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    No se encontró una persona con ese RUN o ID.
                                </div>
                            </div>

                            <div class="form-section-title">Detalles de Contacto y Compañía</div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="nombre_contacto" class="form-label">Nombre del Contacto</label>
                                    <input type="text" class="form-control" id="nombre_contacto" name="nombre_contacto"
                                        placeholder="Nombre completo">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="email_contacto" class="form-label">Email de Contacto</label>
                                    <input type="email" class="form-control" id="email_contacto" name="email_contacto"
                                        placeholder="correo@ejemplo.com">
                                </div>
                                <div class="col-md-12 mb-3">
                                    <label for="nombre_compania" class="form-label">Nombre de la Compañía /
                                        Empresa</label>
                                    <input type="text" class="form-control" id="nombre_compania" name="nombre_compania"
                                        placeholder="Razón social">
                                </div>
                            </div>

                            <div class="form-section-title mt-4">Ubicación y Estado</div>
                            <div class="row">
                                <div class="col-md-8 mb-3">
                                    <label for="direccion" class="form-label">Dirección</label>
                                    <input type="text" class="form-control" id="direccion" name="direccion"
                                        placeholder="Calle, número, oficina">
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="ciudad" class="form-label">Ciudad</label>
                                    <input type="text" class="form-control" id="ciudad" name="ciudad"
                                        placeholder="Ej: Santiago">
                                </div>
                            </div>

                            <div class="form-check form-switch card p-3 border-light shadow-sm mt-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <label class="form-check-label fw-bold" for="activo">Grupo Activo</label>
                                        <p class="small text-muted mb-0">Habilita el grupo para uso inmediato en el
                                            sistema</p>
                                    </div>
                                    <input class="form-check-input h4" type="checkbox" id="activo" name="activo"
                                        value="1" checked>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-5">
                                <button type="reset" class="btn btn-light border" onclick="limpiarTodo()">
                                    <i class="bi bi-eraser"></i> Limpiar
                                </button>
                                <button type="submit" class="btn btn-purple-custom px-5">
                                    <i class="bi bi-save"></i> Guardar Grupo
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="bg-purple-custom text-center text-white mt-auto py-4">
        <div class="container">
            <p class="mb-1">&copy; <span id="currentYear"></span> Sistema de Gestión Vehicular</p>
            <p class="small mb-0">Fecha servidor: <span id="fechaServidor">
                    <%= new Date(fecha).toLocaleString() %>
                </span></p>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#currentYear').text(new Date().getFullYear());

            $('.select2-enable').select2({
                theme: 'bootstrap-5',
                width: '100%'
            });

            // Autocompletar al seleccionar de la lista
            $('#persona_vincular_select').on('change', function () {
                const selectedOption = $(this).find(':selected');
                const nombre = selectedOption.data('nombre');
                const email = selectedOption.data('email');
                const idPersona = $(this).val();

                if (idPersona) {
                    // Buscar información completa de la persona
                    buscarPersonaPorId(idPersona);
                }
            });

            // Permitir buscar con Enter
            $('#buscar_persona').on('keypress', function (e) {
                if (e.which === 13) {
                    e.preventDefault();
                    buscarPersona();
                }
            });
        });

        function buscarPersona() {
            const input = $('#buscar_persona').val().trim();
            if (!input) {
                alert('Por favor, ingresa un RUN o ID para buscar');
                return;
            }

            // Mostrar loading
            const btnBuscar = $('#btnBuscarPersona');
            const originalHtml = btnBuscar.html();
            btnBuscar.html('<span class="loading-spinner"></span> Buscando...');
            btnBuscar.prop('disabled', true);

            // Ocultar mensajes anteriores
            $('#personaNoEncontrada').hide();
            $('#personaInfo').hide();

            // Determinar si es RUN o ID
            let endpoint = '';
            if (input.includes('-')) {
                // Es un RUN (ej: 12345678-9)
                endpoint = `/api/personas/buscar/run/${encodeURIComponent(input)}`;
            } else if (!isNaN(input)) {
                // Es un ID numérico
                endpoint = `/api/personas/buscar/id/${input}`;
            } else {
                alert('Formato inválido. Ingresa un RUN (con guión) o un ID numérico');
                btnBuscar.html(originalHtml);
                btnBuscar.prop('disabled', false);
                return;
            }

            // Hacer la petición AJAX
            $.ajax({
                url: endpoint,
                method: 'GET',
                dataType: 'json',
                success: function (persona) {
                    if (persona) {
                        mostrarPersonaEncontrada(persona);
                    } else {
                        $('#personaNoEncontrada').show();
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error al buscar persona:', error);
                    alert('Error al buscar persona. Por favor, intenta nuevamente.');
                },
                complete: function () {
                    btnBuscar.html(originalHtml);
                    btnBuscar.prop('disabled', false);
                }
            });
        }

        function buscarPersonaPorId(idPersona) {
            if (!idPersona) return;

            $.ajax({
                url: `/api/personas/buscar/id/${idPersona}`,
                method: 'GET',
                dataType: 'json',
                success: function (persona) {
                    if (persona) {
                        mostrarPersonaEncontrada(persona);
                        // Seleccionar la opción en el select
                        $('#persona_vincular_select').val(idPersona).trigger('change');
                    }
                },
                error: function () {
                    alert('Error al cargar información de la persona');
                }
            });
        }

        function mostrarPersonaEncontrada(persona) {
            // Mostrar información
            $('#infoIdPersona').text(persona.id_persona);
            $('#infoRun').text(persona.run + '-' + persona.dv);
            $('#infoNombre').text(persona.nombres + ' ' + persona.apellido_paterno + ' ' + persona.apellido_materno);
            $('#infoEmail').text(persona.email || 'No registrado');
            $('#infoTelefono').text(persona.telefono || 'No registrado');
            $('#infoDireccion').text(persona.direccion || 'No registrada');

            // Autocompletar campos del formulario
            $('#nombre_contacto').val(persona.nombres + ' ' + persona.apellido_paterno + ' ' + persona.apellido_materno);
            $('#email_contacto').val(persona.email || '');

            // Guardar ID en campo oculto
            $('#id_persona_vincular').val(persona.id_persona);

            // Mostrar el contenedor de información
            $('#personaInfo').show();
            $('#personaNoEncontrada').hide();
        }

        function limpiarPersona() {
            $('#buscar_persona').val('');
            $('#persona_vincular_select').val('').trigger('change');
            $('#personaInfo').hide();
            $('#personaNoEncontrada').hide();
            $('#id_persona_vincular').val('');

            // Limpiar campos autocompletados (opcional)
            // $('#nombre_contacto').val('');
            // $('#email_contacto').val('');
        }

        function limpiarTodo() {
            limpiarPersona();
            // El resto del formulario se limpia con el botón reset nativo
        }
    </script>
</body>

</html>