<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        <%= locals.title || 'Registrar Grupo' %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/Index.css">
    <style>
        .required-field::after {
            content: " *";
            color: red;
        }

        .bg-primary-custom {
            background-color: #0d6efd !important;
        }

        .btn-primary-custom {
            background-color: #0d6efd;
            color: white;
            border: none;
        }
    </style>
</head>

<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary-custom shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/"><i class="bi bi-car-front-fill me-2"></i>Gestión Vehicular</a>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow border-0">
                    <div class="card-header py-3 bg-primary-custom text-white">
                        <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Registrar Nuevo Grupo</h4>
                    </div>
                    <div class="card-body p-4">

                        <% if (locals.success_msg && success_msg.length> 0) { %>
                            <div class="alert alert-success">
                                <%= success_msg %>
                            </div>
                            <% } %>
                                <% if (locals.error_msg && error_msg.length> 0) { %>
                                    <div class="alert alert-danger">
                                        <%= error_msg %>
                                    </div>
                                    <% } %>

                                        <form method="POST" action="/grupos/crear">
                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label required-field fw-bold">Nombre del
                                                        Grupo</label>
                                                    <input type="text" class="form-control" name="nombre_grupo"
                                                        value="<%= locals.formData?.nombre_grupo || '' %>" required>
                                                </div>

                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label required-field fw-bold">Cliente
                                                        Responsable</label>
                                                    <select class="form-select" name="id_cliente" required>
                                                        <option value="">Seleccionar...</option>
                                                        <% if (locals.clientes) { %>
                                                            <% clientes.forEach(c=> { %>
                                                                <option value="<%= c.id_cliente %>"
                                                                    <%=(locals.formData?.id_cliente==c.id_cliente)
                                                                    ? 'selected' : '' %>>
                                                                    <%= c.nombre %>
                                                                </option>
                                                                <% }); %>
                                                                    <% } %>
                                                    </select>
                                                </div>

                                                <div class="col-md-12 mb-3">
                                                    <label class="form-label fw-bold">Nombre de la Compañía</label>
                                                    <input type="text" class="form-control" name="nombre_compania"
                                                        value="<%= locals.formData?.nombre_compania || '' %>">
                                                </div>

                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label fw-bold">Nombre del Contacto</label>
                                                    <input type="text" class="form-control" name="nombre_contacto"
                                                        value="<%= locals.formData?.nombre_contacto || '' %>">
                                                </div>

                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label fw-bold">Email de Contacto</label>
                                                    <input type="email" class="form-control" name="email_contacto"
                                                        value="<%= locals.formData?.email_contacto || '' %>">
                                                </div>

                                                <div class="col-md-12 mb-3">
                                                    <div class="form-check form-switch p-2 border rounded bg-white">
                                                        <input class="form-check-input ms-0 me-2" type="checkbox"
                                                            name="activo" value="1" <%=(locals.formData?.activo=='0' )
                                                            ? '' : 'checked' %>>
                                                        <label class="form-check-label fw-bold">Grupo Activo</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-between mt-4">
                                                <a href="/" class="btn btn-outline-secondary">Cancelar</a>
                                                <button type="submit" class="btn btn-primary-custom px-4">Guardar
                                                    Grupo</button>
                                            </div>
                                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>