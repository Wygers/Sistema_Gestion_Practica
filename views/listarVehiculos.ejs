<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        <%= title %>
    </title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- CSS Personalizado -->
    <link rel="stylesheet" href="/css/Index.css">

    <style>
        .table-hover tbody tr:hover {
            background-color: rgba(13, 110, 253, 0.05);
        }

        .card-header {
            background: linear-gradient(135deg, #198754 0%, #20c997 100%);
            color: white;
        }

        .vehiculo-row {
            cursor: pointer;
            transition: all 0.2s;
        }

        .vehiculo-row:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-custom {
            background-color: #0d6efd;
            box-shadow: 0 2px 4px rgba(0, 0, 0, .1);
        }

        .footer-custom {
            background-color: #343a40;
            color: white;
            padding: 1rem 0;
            margin-top: 2rem;
        }

        .patente-badge {
            background-color: #198754;
            color: white;
            font-family: monospace;
            font-weight: bold;
            letter-spacing: 1px;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-car-front-fill me-2"></i>Gestión Vehicular
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" href="/">Inicio</a>
                    <a class="nav-link" href="/personas">Personas</a>
                    <a class="nav-link active" href="/vehiculos">Vehículos</a>
                    <a class="nav-link" href="/login">Login</a>
                </div>
            </div>
        </div>
    </nav>
    <main class="container-fluid mt-4">
        <!-- Encabezado -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="mb-0">
                                <i class="bi bi-truck me-2"></i>Listado de Vehículos
                            </h2>
                            <small class="opacity-75">Gestión completa de vehículos registrados</small>
                        </div>
                        <a href="/vehiculos/agregar" class="btn btn-light">
                            <i class="bi bi-plus-circle me-1"></i>Agregar Nuevo
                        </a>
                    </div>
                    <!-- Mensajes de éxito/error -->
                    <% if (typeof success !=='undefined' && success) { %>
                        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                            <i class="bi bi-check-circle me-2"></i>
                            <%= success %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                        <% } %>

                            <% if (typeof error !=='undefined' && error) { %>
                                <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    <%= error %>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                                <% } %>
                </div>
            </div>
        </div>
        <!-- Contenido principal -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body">
                        <% if (vehiculos.length===0) { %>
                            <div class="text-center py-5">
                                <i class="bi bi-truck display-1 text-muted"></i>
                                <h4 class="mt-3">No hay vehículos registrados</h4>
                                <p class="text-muted">Comienza agregando el primer vehículo al sistema.</p>
                                <a href="/vehiculos/agregar" class="btn btn-success">
                                    <i class="bi bi-plus-circle me-1"></i>Agregar Primer Vehículo
                                </a>
                                <a href="/" class="btn btn-outline-secondary ms-2">
                                    <i class="bi bi-house me-1"></i>Volver al Inicio
                                </a>
                            </div>
                            <% } else { %>
                                <!-- ... mantén el header y navbar igual ... -->

                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>ID</th>
                                                <th>Patente</th>
                                                <th>Marca/Modelo</th>
                                                <th>Año</th>
                                                <th>Tipo</th>
                                                <th>Cliente</th>
                                                <th>Color</th>
                                                <th>Capacidad</th>
                                                <th>Estado</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% vehiculos.forEach(vehiculo=> { %>
                                                <tr>
                                                    <td>
                                                        <%= vehiculo.id_vehiculo %>
                                                    </td>
                                                    <td>
                                                        <span class="badge patente-badge">
                                                            <%= vehiculo.patente %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <strong>
                                                            <%= vehiculo.marca %>
                                                        </strong><br>
                                                        <small class="text-muted">
                                                            <%= vehiculo.modelo %>
                                                        </small>
                                                    </td>
                                                    <td>
                                                        <%= vehiculo.anio %>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-info">
                                                            <%= vehiculo.nombre_tipo || 'N/A' %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <strong>
                                                            <%= vehiculo.nombre_cliente || 'N/A' %>
                                                        </strong><br>
                                                        <small class="text-muted">
                                                            <%= vehiculo.rut_cliente || 'Sin RUT' %>
                                                        </small>
                                                    </td>
                                                    <td>
                                                        <span class="badge"
                                                           
                                                            <%= vehiculo.color %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <%= vehiculo.capacidad %>
                                                    </td>
                                                    <td>
                                                        <% if (vehiculo.activo) { %>
                                                            <span class="badge bg-success">Activo</span>
                                                            <% } else { %>
                                                                <span class="badge bg-danger">Inactivo</span>
                                                                <% } %>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                </div>

                                <!-- ... mantén el footer y modales igual ... -->
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <div>
                                        <span class="text-muted">
                                            Mostrando <strong>
                                                <%= vehiculos.length %>
                                            </strong> vehículo(s)
                                        </span>
                                    </div>
                                    <div>
                                        <a href="/vehiculos/agregar" class="btn btn-success">
                                            <i class="bi bi-plus-circle me-1"></i>Agregar Nuevo
                                        </a>
                                        <a href="/" class="btn btn-outline-secondary ms-2">
                                            <i class="bi bi-house me-1"></i>Volver al Inicio
                                        </a>
                                    </div>
                                </div>
                                <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer-custom text-center mt-5">
        <div class="container">
            <p class="mb-0">
                &copy; <%= new Date().getFullYear() %> Sistema de Gestión Vehicular
            </p>
            <small>Control • Seguridad • Reportes</small>
        </div>
    </footer>

    <!-- Modal para detalles -->
    <div class="modal fade" id="detallesModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-truck me-2"></i>Detalles del Vehículo
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="modalDetallesContent">
                    <!-- Contenido dinámico -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        $(document).ready(function () {
            // Auto-ocultar alertas después de 5 segundos
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Confirmación para eliminar
            $('.btn-outline-danger').on('click', function (e) {
                if (!confirm('¿Está seguro de eliminar este vehículo? Esta acción no se puede deshacer.')) {
                    e.preventDefault();
                }
            });
        });

        // Función para ver detalles del vehículo
        async function verDetalles(idVehiculo) {
            try {
                // Convertir a número si es string
                idVehiculo = parseInt(idVehiculo);

                // Mostrar loading
                document.getElementById('modalDetallesContent').innerHTML =
                    `<div class="text-center py-4">
                    <div class="spinner-border text-success" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-3">Cargando detalles del vehículo...</p>
                </div>`;

                const modal = new bootstrap.Modal(document.getElementById('detallesModal'));
                modal.show();

                // Hacer petición para obtener detalles
                const response = await fetch('/vehiculos/detalles/' + idVehiculo);

                if (!response.ok) {
                    throw new Error('Error al obtener detalles');
                }

                const vehiculo = await response.json();

                // Mostrar detalles - escapando las comillas simples
                const content =
                    `<div class="row">
                    <div class="col-md-6">
                        <h6>Información General</h6>
                        <table class="table table-sm">
                            <tr>
                                <th>ID:</th>
                                <td>${vehiculo.id_vehiculo}</td>
                            </tr>
                            <tr>
                                <th>Patente:</th>
                                <td><span class="badge bg-success">${vehiculo.patente}</span></td>
                            </tr>
                            <tr>
                                <th>Marca:</th>
                                <td>${vehiculo.marca}</td>
                            </tr>
                            <tr>
                                <th>Modelo:</th>
                                <td>${vehiculo.modelo}</td>
                            </tr>
                            <tr>
                                <th>Año:</th>
                                <td>${vehiculo.anio}</td>
                            </tr>
                            <tr>
                                <th>Tipo:</th>
                                <td><span class="badge bg-info">${vehiculo.nombre_tipo || 'N/A'}</span></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h6>Especificaciones</h6>
                        <table class="table table-sm">
                            <tr>
                                <th>Capacidad:</th>
                                <td>${vehiculo.capacidad}</td>
                            </tr>
                            <tr>
                                <th>Color:</th>
                                <td><span class="badge" style="background-color: ${vehiculo.color}; color: white;">${vehiculo.color}</span></td>
                            </tr>
                            <tr>
                                <th>Chasis:</th>
                                <td>${vehiculo.numero_chasis || 'No registrado'}</td>
                            </tr>
                            <tr>
                                <th>Motor:</th>
                                <td>${vehiculo.numero_motor || 'No registrado'}</td>
                            </tr>
                            <tr>
                                <th>Estado:</th>
                                <td>${vehiculo.activo ? '<span class="badge bg-success">Activo</span>' : '<span class="badge bg-danger">Inactivo</span>'}</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <h6>Información del Cliente</h6>
                        <table class="table table-sm">
                            <tr>
                                <th>Cliente:</th>
                                <td>${vehiculo.nombre_completo_cliente || 'No asignado'}</td>
                            </tr>
                            <tr>
                                <th>ID Cliente:</th>
                                <td>${vehiculo.id_cliente}</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <h6>Fechas</h6>
                        <table class="table table-sm">
                            <tr>
                                <th>Registrado:</th>
                                <td>${new Date(vehiculo.fecha_registro).toLocaleString()}</td>
                            </tr>
                            <tr>
                                <th>Actualizado:</th>
                                <td>${new Date(vehiculo.fecha_actualizacion).toLocaleString()}</td>
                            </tr>
                        </table>
                    </div>
                </div>`;

                document.getElementById('modalDetallesContent').innerHTML = content;

            } catch (error) {
                console.error('Error al obtener detalles:', error);
                document.getElementById('modalDetallesContent').innerHTML =
                    `<div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Error al cargar los detalles del vehículo.
                </div>`;
            }
        }
    </script>
</body>

</html>